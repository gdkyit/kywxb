/**app.wxss**/
/*
* #333333 Black 主要内容、标题字色
* #666666 Grey 次要信息字色
* #999999 次次要字色
* #FAFBFC 背景色1  #ECF5FD 背景色2
* #E5E5E5 分割线
* #5D8EE8 主题色  #89b2f5 辅色
* 辅助色 蓝#78A4FA,绿#13CE66,红#FF7979,黄FFC82C
*/

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 200rpx 0;
    box-sizing: border-box;
}

page {
    background-color: #FAFBFC;
    font-size: 24rpx;
    font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}
.p-body{
    padding: 8rpx 16rpx 16rpx 16rpx
}
.p-footer {
  color: #999999;
  font-size: 24rpx;
  text-align: center;
  padding: 10rpx;
  position: fixed;
  bottom: 20rpx;
  left: 0;
  right: 0;
}
.page__hd {
    padding: 40px;
}

.page__bd {
    padding-bottom: 40px;
}

.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft {
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}
