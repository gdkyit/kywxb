/**app.wxss**/
/*
* #000000 Black 主要内容、标题字色
* #666666 Grey 次要信息字色
* #333333 Semi Black 大段的说明且属于主要内容
* #FAFBFC 背景色1  #ECF5FD 背景色2
* #5D8EE8 主题色  #89b2f5 辅色
* 辅助色 蓝#78A4FA,绿#13CE66,红#FF7979,黄FFC82C
*/

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 200rpx 0;
    box-sizing: border-box;
}

page {
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.page__hd {
    padding: 40px;
}

.page__bd {
    padding-bottom: 40px;
}

.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft {
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}
