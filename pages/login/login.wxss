/* login.wxss */
page {
  height: 100%;
}

.page {
  height: 100%;
  position: relative;
}

image {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -1;
}

.form-area {
  position: absolute;
  z-index: 10;
  top: 95px;
  width: 100%;
}
.title{
  margin-bottom:20px
}

.input-box {
  background-color: rgba(255, 255, 255, 0.3);
  padding: 40rpx 0;
  margin-bottom: 1rpx;
}

input {
  padding-left: 100rpx;
  color: #e8e8e8;
  font-size: 14pt;
}

.placeholder {
  color: #aaa;
  font-size: 13pt;
}

.h1{
  color: #fff;
  text-align: center;
}
.h1 {
  font-size: 17pt;
  font-weight:bold
}
.weui-btn{
  background-color: #406880;
  color:#fff;
  border-radius: 2px;
}
button[type="primary"] {
    background-color: #406880;
}

button[disabled][type="primary"] {
  background-color: #9fb3bf;
}
    